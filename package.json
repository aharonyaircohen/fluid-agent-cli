{
  "name": "@digital-fluid/fluid-agent-cli",
  "version": "1.0.0",
  "description": "CLI interface for the fluid-agent runtime. Execute AI-powered code modification tasks from JSON or YAML task definitions.",
  "keywords": [
    "cli",
    "ai",
    "code-generation",
    "automation",
    "fluid-agent",
    "yaml",
    "task-runner"
  ],
  "homepage": "https://github.com/aharonyaircohen/fluid-agent-cli#readme",
  "bugs": {
    "url": "https://github.com/aharonyaircohen/fluid-agent-cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aharonyaircohen/fluid-agent-cli.git"
  },
  "license": "MIT",
  "author": "Digital Fluid",
  "type": "module",
  "bin": {
    "fluid-agent": "./dist/cli/index.js",
    "fluid-logs": "./dist/cli/logs.js",
    "flcli": "./dist/cli/index.js"
  },
  "main": "./dist/cli/index.js",
  "types": "./dist/cli/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:e2e": "npm run build && npx tsx --test tests/logs.e2e.test.ts",
    "test:e2e:verbose": "npm run build && VERBOSE=true npx tsx --test tests/logs.e2e.test.ts",
    "test:manual": "tsx test.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "npm run build && node dist/cli/index.js",
    "start:demo": "node dist/cli/index.js run example/task.yaml --root . --write",
    "packme": "bash pack.sh"
  },
  "dependencies": {
    "@digital-fluid/fluid-agent": "file:../fluid-agent",
    "commander": "^14.0.2",
    "picocolors": "^1.1.1",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^24.10.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
